# Stage 1: Build the Angular app
FROM node:lts-alpine AS frontend-build
WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install --silent

# Copy source and build
COPY . .
RUN npm run build -- --configuration=production --base-href=/

# Stage 2: Serve with Nginx
FROM nginx:alpine

# Remove default nginx static assets
RUN rm -rf /usr/share/nginx/html/*

# Copy your custom nginx configuration
# Ensure your nginx.conf handles the /api proxy to the backend!
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Copy the built Angular files
# TRIPLE CHECK THIS PATH: usually dist/[project-name]/browser
COPY --from=frontend-build /app/dist/tsr/browser /usr/share/nginx/html

# Optional: Ensure permissions are correct for Nginx
RUN chmod -R 755 /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
