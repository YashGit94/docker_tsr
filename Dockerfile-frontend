FROM node:lts-alpine AS frontend-build
WORKDIR /app
COPY package*.json ./
RUN npm install --silent
COPY . .
# Note: --base-href=/ ensures it works at the root of the Cloud Run URL
RUN npm run build -- --configuration=production --base-href=/

# Nginx stage
FROM nginx:alpine
COPY nginx.conf /etc/nginx/conf.d/default.conf

# FIX: Check your angular.json "outputPath"
# Based on your angular.json, the path is "dist/tsr"
COPY --from=frontend-build /app/dist/tsr /usr/share/nginx/html

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
