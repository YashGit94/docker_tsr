FROM node:lts-alpine AS frontend-build
WORKDIR /app

# 1. Copy and install dependencies first for layer caching
# This assumes package.json is in the root and defines Angular dependencies
COPY package*.json ./
RUN npm install --silent

# 2. Copy all application source code
COPY . .

# 3. Build the Angular application for production
# Uses your confirmed working output path: /app/dist/tsr/browser
RUN npm run build -- --configuration=production --base-href=/

# Stage 2: Serve the Angular app with Nginx
FROM nginx:alpine
# FIXED PATH: Using your confirmed working path /app/dist/tsr/browser
COPY --from=frontend-build /app/dist/tsr/browser /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
