# Stage 1: Build
FROM node:lts-alpine AS frontend-build
WORKDIR /app
COPY package*.json ./
RUN npm install --silent
COPY . .
RUN npm run build -- --configuration=production --base-href=/

# Stage 2: Nginx
FROM nginx:alpine

# Remove default config
RUN rm /etc/nginx/conf.d/default.conf

# Copy your modified nginx.conf (the one listening on 8080)
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Copy build artifacts
COPY --from=frontend-build /app/dist/tsr/browser /usr/share/nginx/html

# Cloud Run health check expects the container to listen on 8080
EXPOSE 8080

CMD ["nginx", "-g", "daemon off;"]
